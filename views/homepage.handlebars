{{#each posts as |post|}}
  <div>
    <div class="card">
      <div class="card-title">
        <h2>
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p class="user-details">Posted by
          {{user.username}}
          on
          {{format_date date_created}}</p>
      </div>
      <p>
        {{post.content}}
      </p>
    </div>
  </div>
{{/each}}